<div class="container" id="mainContainer">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
             <li class="nav-item active">
                    <a class="btn btn-link btn-sm" href="/saved">Saved Articles
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <button id="scrapeButton" type="button" class="btn btn-link btn-sm">Scrape New Articles</button>
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <div class="container" id="titleContainer">
            <h1 class="display-4 text-center font-weight-bold">Mongo News Scraper</h1>
        </div>
    </div>

    {{#each articles}}
    <div class="card">
        <div class="card-header text-white bg-dark">
            <div class="row">
                <div class="col-8">
                    <a href="{{this.link}}"> {{this.title}}</a>
                </div>
                <div class="col-4">
                    <button type="button" class="btn btn-link btn-sm noteArticleButton" data-toggle="modal" data-target="#notesModal" data-articleId={{this._id}}>Article Notes</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{this.summary}}</p>
            </blockquote>
        </div>
    </div>
    {{/each}}

    <div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="noteModalTitle">Notes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div id="editNotes">
                            <label for="userNotes" class="col-form-label">Add a new note or make an update</label>
                            <textarea class="form-control" id="userNotes"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="saveNoteButton" class="btn btn-link btn-sm">Save Note</button>
                    <button type="button" class="btn btn-link btn-sm noteDelete">Delete Note</button>
                </div>
            </div>
        </div>
    </div>

</div>